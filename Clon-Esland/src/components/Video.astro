---
import Button from '../components/button.tsx'
---

<div class="w-full relative" >

    <div>
        <img class="absolute top-10 z-10 w-[800px] left-0 right-0 m-auto mb-4 animate-fade-up"
        src="/logo-home.svg" 
        alt="Esland - Premios a la comunidad hispanohablante de streaming">

        <Button
            url={"https://premiosesland.koobin.com"}
            className="text-blue-950 animate-fade-up bg-white absolute z-10 left-0 right-0 m-auto top-3/4"
            >
                COMPRAR ENTRADAS
        </Button>
    </div>
    

    <video 
    class="w-full z-40 h-screen object-cover object-top animate-ease-in-out animate-fade animate-duration-1000" 
    src="/video.mp4" 
    style="clip-path: polygon(0 0, 100% 0, 100% 85%, 50% 100%, 0% 85%);"

    autoplay loop muted 
    ></video>

    <video 
    class="absolute -botton-48 blur-3xl z-0" 
    src="/video.mp4" 
    autoplay loop muted 
    ></video>
    

</div>